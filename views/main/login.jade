	body
	.limiter
		.container-login100
			.wrap-login100
				.login100-form-title(style='background-image: url(/adminlte/template/images/sembako.jpg);')
					span.login100-form-title-1
						| Sign In
				form.login100-form.validate-form(action="/login" method="post")
					.wrap-input100.validate-input.m-b-14(data-validate='Username is required')
						span.label-input100 Email
						input.input100(type="email" placeholder="Email" name="txtEmail")
						span.focus-input100
					.wrap-input100.validate-input.m-b-14(data-validate='Password is required')
						span.label-input100 Password
						input.input100(type="password" placeholder="Password" name="txtPassword")
						span.focus-input100
					.flex-sb-m.w-full.p-b-10
						.contact100-form-checkbox
						div
							a.txt1(href='/register')
								| Register a new membership
					.container-login100-form-btn
						button(type="submit").login100-form-btn
							| Login
